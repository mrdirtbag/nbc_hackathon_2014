// app/layout.styl

@import '../_variables'
@import '../_mixins'

$scale = 0.90

// your styles here:
body
  background: rgb(240, 240, 240)


.iphone-container {
  z-index: 10;
  background-color: #fff;
  width: 320px;
  height: 568px;
  position: relative;
  top: 50px;
}

.content {
  position: relative;
  max-width: 700px;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
}

#phone-view {
  display: inline-block;
  top: 0;
  min-width: 320px;
  height: 580px;
  margin: 40px 20px 20px 20px;
  vertical-align: top;
}

.device {
  width: 380px;
  height: 780px;
  background-image: url(../images/device-iphone.svg);
  background-size: 550px 780px;
  background-repeat: no-repeat;
  background-position: center;
  -webkit-transform-origin: 50% 50%;
  transform-origin: 50% 50%;
  // -webkit-transform: scale3d( $scale, $scale, 1);
  // transform: scale3d( $scale, $scale, 1);
  -webkit-transform: scale( $scale );
  transform: scale( $scale );
  margin-top: -50px;
  margin-left: 100px;
}

.phone-container
  border: 4px solid #000;
  top: 100px;
  left: 30px;
  position: absolute;
  width: 320px;
  height: 568px;
  background-color: #fff;
  overflow: hidden;

  .navbar
    margin-bottom 0

.landscape
  -ms-transform matrix(0, - $scale, $scale, 0,0,0)
  -webkit-transform matrix( 0, - $scale, $scale, 0,0,0)
  transform matrix( 0, - $scale, $scale, 0,0,0)

  .phone-container
    height: 320px;
    width: 568px;
    top: 230px;
    left: -93px;
    transform: rotate(90deg);

    .navbar
      display none


.container
  main
    padding-bottom 20px

.media-thumbnail
  max-height 90px

.scroll-container
  padding-top 15px
  padding-bottom 100px
  height 400px
  overflow scroll

#settings-cog
  font-size: 29px;
  padding: 10px;
  margin-right: -10px;

.media
  margin-left 10px
  margin-right 10px

.media-body img
  width 100%

.pageOne
  h3
    padding-left 10px;
  h4
    padding-left 10px;
  .scroll-container
    height 310px

video
  background-color black

